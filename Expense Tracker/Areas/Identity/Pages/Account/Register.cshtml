@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @*<h2>Create a new account.</h2>
            <hr />*@
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                    @* <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />*@
                <label asp-for="Input.FirstName"></label>
                    <ejs-textbox id="FirstName" placeholder="FirstName" ejs-for="Input.FirstName"></ejs-textbox>

                    <span asp-validation-for="Input.FirstName" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                @*<input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />*@
                <label asp-for="Input.LastName"></label>
                    <ejs-textbox id="LastName" placeholder="LastName" ejs-for="Input.LastName"></ejs-textbox>

                    <span asp-validation-for="Input.LastName" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                @*<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />*@
                <label asp-for="Input.Email"></label>
                    <ejs-textbox id="Email" placeholder="name@example.com" ejs-for="Input.Email"></ejs-textbox>

                    <span asp-validation-for="Input.Email" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                @*<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />*@
                <label asp-for="Input.Password"></label>
                    <ejs-textbox id="Password" type="Password"  placeholder="password" ejs-for="Input.Password"></ejs-textbox>

                    <span asp-validation-for="Input.Password" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                @*<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />*@
                <label asp-for="Input.ConfirmPassword"></label>
                    <ejs-textbox id="ConfirmPassword" type="Password"  placeholder="password" ejs-for="Input.ConfirmPassword"></ejs-textbox>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger fs-6"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <br />
            <p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already a user? Login Here</a>
            </p>
        </form>
        </div>
    </div>
